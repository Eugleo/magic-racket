{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["string"]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": ["string"]
    },
    {
      "open": "/*",
      "close": "*/",
      "notIn": ["string"]
    }
  ],
  "autoCloseBefore": ")]},'`;| \n\t#",
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["/*", "*/"],
    ["'", "'"]
  ],
  "wordPattern": "(?<=(\\p{Z}|^))([\\p{L}_\\p{S}][\\p{L}\\p{N}\\p{Pc}\\p{S}]*)(?=(\\p{Z}|$))",
  "folding": { "offSide": true }
}
